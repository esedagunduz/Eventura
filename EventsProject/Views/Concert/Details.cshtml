@using EntityLayer.Concrete;
@model Event

@{
ViewData["Title"] = "Etkinlik Detayları";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&family=Montserrat:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>

<!-- Preloader -->
<div id="preloader">
    <div class="dorne-load"></div>
</div>

<section class="event-detail-container">
    <div class="event-detail-wrapper">
        <!-- Event Image -->
        <div class="event-image">
            <img src="@Model.ImageUrl" alt="Event Image">
        </div>

        <div class="content-container">
            <!-- Event Content -->
            <div class="event-content">
                <h2 class="event-title">@Model.Title</h2>
                <div class="event-overview">
                    <p class="event-description">@Model.Description</p>
                    <p class="event-details">@Model.Details</p>
                </div>

                <!-- Event Location -->
                <div class="event-location">
                    <strong>Konum:</strong> @Model.Location
                </div>

                <!-- Google Map -->
                <div class="event-map">
                    <h3>Haritada Göster</h3>
                    @if (!string.IsNullOrEmpty(Model.LocationUrl))
                    {
                    <iframe src="@Model.LocationUrl" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                    }
                </div>
            </div>

            <!-- Sidebar -->
            <div class="event-sidebar">
                <button class="dorne-btn">Bilet Al</button>
                <div class="opening-hours-widget">
                    <h6>Açılış Saati</h6>
                    <ul class="opening-hours">
                        <li><p>@Model.EventDate.ToString("HH:mm")</p></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

</body>

</html>

<style>
    /* General Styles */
    /* General Styles */
    /* General Styles */
    /* General Styles */
    /* General Styles */
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #fff;
        color: #333;
        margin: 0;
        padding: 0;
    }

    .event-detail-container {
        padding: 0;
        width: 100%;
    }

    .event-detail-wrapper {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    /* Event Image - Centered at top */
    .event-image {
        width: 400px; /* Genişlik 400px */
        height: 300px; /* Yükseklik 300px */
        overflow: hidden;
        margin-bottom: 40px;
        position: relative;
    }
    .event-image img {
        width: 400px; /* Genişlik 400px */
        height: 300px; /* Yükseklik 300px */
        object-fit: cover;
    }
    .event-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    /* Content Layout */
    .content-container {
        width: 90%;
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        gap: 40px;
    }

    /* Event Content */
    .event-content {
        flex: 1;
        max-width: 70%;
    }

    .event-title {
        font-family: 'Montserrat', sans-serif;
        font-size: 42px;
        font-weight: 700;
        color: #333;
        margin-bottom: 20px;
    }

    .event-overview {
        margin-bottom: 30px;
    }

    .event-description {
        font-size: 18px;
        line-height: 1.6;
        color: #666;
        margin-bottom: 20px;
    }

    .event-details {
        font-size: 18px;
        line-height: 1.6;
        color: #666;
    }

    /* Sidebar */
    .event-sidebar {
        width: 300px;
    }

    /* Button Style */
    .dorne-btn {
        background-color: #8B0000;
        color: white;
        padding: 15px 30px;
        border: none;
        border-radius: 4px;
        width: 100%;
        font-size: 18px;
        font-weight: 500;
        cursor: pointer;
        margin-bottom: 20px;
    }

    .dorne-btn:hover {
        background-color: #A52A2A;
    }

    /* Opening Hours Widget */
    .opening-hours-widget {
        background-color: #8B0000;
        padding: 20px;
        border-radius: 4px;
        text-align: center;
    }

    .opening-hours-widget h6 {
        color: white;
        font-size: 20px;
        margin-bottom: 10px;
    }

    .opening-hours {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .opening-hours li p {
        color: white;
        font-size: 24px;
        font-weight: 500;
        margin: 0;
    }

    /* Map Section */
    .event-map {
        width: 100%;
        margin-top: 30px;
    }

    .event-map h3 {
        font-size: 24px;
        color: #333;
        margin-bottom: 20px;
    }

    .event-map iframe {
        width: 100%;
        height: 400px;
        border-radius: 8px;
    }

    /* Location Text */
    .event-location {
        font-size: 18px;
        color: #666;
        margin: 20px 0;
    }

    .event-location strong {
        color: #333;
    }
</style>